enum TaskPriority {
    LOW
    MEDIUM
    HIGH
}

enum TaskState {
    ToDo
    InProgress
    Done
}

model User {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    username    String @unique
    password    String
    tasks       Task[]
}

model Task {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    priority    TaskPriority
    state       TaskState
    user        User     @relation(fields: [userId], references: [id])
    userId      String
}